[module/spotify]
type = custom/script
interval = 1
format-prefix = ":"
format = <label>
format-background = #555
format-padding = 1
exec = python3 $HOME/.config/polybar/scripts/spotify_status.py
;-p '[playing],[paused]' --playpause-font=2
fomat-underline = #1db954

[module/mc]
type = custom/script
interval = 1
format-prefix = ":"
format = <label>
format-background = #555
format-padding = 1
exec = python3 $HOME/.config/polybar/scripts/mc_status.py -c '$HOME/.config/polybar/cache/mc_status.cache'

