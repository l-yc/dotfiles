#
# My Personal Keybindings
#

        ##############################
        # MEDIA KEYS
        ##############################

### News
ctrl + shift + {XF86AudioMute,alt + KP_Enter}
    rhythmbox-client --play-pause

ctrl + 1
    notify-send "hi $PRIMARY"

ctrl + 2
    notify-send "hi $SECONDARY"

### Mute
XF86AudioMute
    amixer set Master toggle
 
### Master Volume
{_,super + }{XF86AudioRaiseVolume,alt + KP_Add}
    amixer set Master {5,1}%+{_,_}
#    canberra-gtk-play -i audio-volume-change -d "changeVolume"

{_,super + }{XF86AudioLowerVolume,alt + KP_Subtract}
    amixer set Master {5,1}%-{_,_}
#    canberra-gtk-play -i audio-volume-change -d "changeVolume"
 
### Pause/Play Spotify
shift + {XF86AudioMute,alt + KP_Enter}
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

### Previous Spotify
shift + {XF86AudioLowerVolume,alt + KP_Subtract}
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous {_,_}

### Next Spotify
shift + {XF86AudioRaiseVolume,alt + KP_Add}
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next {_,_}

# Screen brightness controls
{_,super + }XF86MonBrightnessUp
    light -A {10,1} # increase screen brightness

{_,super + }XF86MonBrightnessDown
    light -U {10,1} # decrease screen brightness


        ##############################
        # Others
        ##############################

### Fullscreen Screenshots
Print
    import -window root ~/Pictures/Screenshots/Screenshot-$(date +"%Y-%m-%d-%H-%M-%S").png

### Select region screenshots
shift + Print
    import ~/Pictures/Screenshots/Screenshot-$(date +"%Y-%m-%d-%H-%M-%S").png

ctrl + Print
    import -window root '/tmp/screenshot.png'; xclip -selection clipboard -target image/png -i '/tmp/screenshot.png'

### Select region screenshots
ctrl + shift + Print
    import '/tmp/screenshot.png'; xclip -selection clipboard -target image/png -i '/tmp/screenshot.png'

### Lock computer
ctrl + alt + l
    i3lock-fancy && xset dpms force off
    #~/Documents/BSPWM/lock_and_blur.sh

### External display
{XF86Display, ctrl + F7}
    printf "restore\ndual\npresent\nmirror\ndefault" | rofi -dmenu | xargs fl_display
    #printf "restore\ndual\npresent\nmirror\ndefault" | rofi -dmenu | xargs printf -- '--%s\n' | xargs -I \{\} bash -ic 'external_monitor \{\}'

        ##############################
        # Navigation shortcuts
        ##############################
### Launch nautilus
super + e
    nemo ~

super + d
    nemo ~/Downloads

alt + t
    xdotool search --class scratchpad | xargs -I\{\} bspc node \{\} --flag hidden -f
    # we don't use: bspc node $(xdotool search --class tasks) --flag hidden -f
    # because if the task window is crashed it'll hide our current window
    #feh ~/Documents/timetable.jpg

alt + q
    feh ~/Documents/periodic_table.jpg

alt + n
    networkmanager_dmenu
#
# wm independent hotkeys
#

# terminal emulator
super + Return
    kitty
    #wezterm
    #urxvt256c-ml

# for one handed triggering
ctrl + alt + t
    kitty
    #wezterm
	#urxvt256c-ml

# program launcher
super + @space
    rofi -combi-modi run,drun -show drun -modi drun,window,combi
    #rofi -combi-modi run,drun -show combi -modi combi,window,ssh
    #rofi -show run
	# dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# adopt all orphans, fix for x11 forwarding
super + shift + o
    bspc wm -o

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} "$PRIMARY:^{1-9,10}"

super + alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} "$SECONDARY:^{1-9,10}"

# my additions
# query node id for debuggin
super + alt + f
    notify-send -u normal "$(bspc query -N -n focused)"

# rotate split
super + shift + r
    bspc node @parent -R 90

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

